@model CRUD.Models.FoodCategoryViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.FormType == "Add")
{

    <h2>Add Item</h2>
}
else
{
    <h2>Edit Item</h2>
}

@using (Html.BeginForm("Add", "Hotel"))
{
    <div class="form-group">

        @Html.LabelFor(m => m.FoodItem.Name)
        @Html.TextBoxFor(m => m.FoodItem.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FoodItem.Name, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">

        @Html.LabelFor(m => m.FoodItem.Price)
        @Html.TextBoxFor(m => m.FoodItem.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FoodItem.Price)
    </div>
    <div class="form-group">

        @Html.LabelFor(m => m.FoodItem.CategoryId)
        @Html.DropDownListFor(m => m.FoodItem.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select a Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FoodItem.CategoryId)
    </div>
    @Html.HiddenFor(m => m.FoodItem.Id)
    <button class="btn btn-primary">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}		